{% extends 'base.html.twig' %}

{% block body %}

	<ul>

		<li>
			Identifiant :
			{{ post.id }}
		</li>

		<li>
			Titre :
			{{ post.title }}
		</li>

		<li>
			Description :
			{{ post.description }}
		</li>

		<li>
			Contenu :
			{{ post.content }}
		</li>

		<li>
			Slug :
			{{ post.slug }}
		</li>

		<li>
			Crée le :
			{{post.createdAt|date("d/m/Y")}}
		</li>

		<li>
			Publié le :
			{{post.publishedAt|date("d/m/Y")}}
		</li>
		{#
					<li>
						{{ post.comments }}
					</li>
								
					<li>
						{{ post.categories }}
					</li>
				#}

	</ul>


{% endblock %}
